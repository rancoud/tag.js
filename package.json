{
  "name": "tag.js",
  "version": "1.0.0",
  "description": "JS Tag Manager",
  "scripts": {
    "test": "jest --coverage --coverageDirectory=./coverage -- tests/tag.test.js",
    "build": "node build.cjs && uglifyjs dist/tag.js --mangle --webkit --compress \"drop_console=true,passes=5\" --comments \"/MIT License/\" -o dist/tag.min.js && jest",
    "jsdoc": "jsdoc -c jsdoc.conf.json",
    "eslint": "eslint --max-warnings=0 src/*.js tests/*.js",
    "eslint:fix": "eslint --fix src/*.js tests/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rancoud/tag.js.git"
  },
  "author": "Rancoud",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rancoud/tag.js/issues"
  },
  "homepage": "https://github.com/rancoud/tag.js",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@types/jest": "^29.5.12",
    "eslint": "^9.2.0",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-jsdoc": "^48.2.4",
    "globals": "^15.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.3",
    "uglify-js": "^3.17.4"
  },
  "type": "module",
  "engines": {
    "npm": ">=10.7.0",
    "node": ">=22.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coveragePathIgnorePatterns": [
      "./tests/screen-reader-speak.js"
    ]
  }
}
